# 服务器配置
HOST=127.0.0.1
PORT=5006

# 日志配置
LOG_LEVEL=INFO

# 定时任务配置
SCHEDULER_TIMEZONE=Asia/Shanghai

# 企业微信配置（可选）
# WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key

# 其他配置
DEBUG=True
